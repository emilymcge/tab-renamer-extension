{
  "manifest_version": 3,
  "name": "Tab Renamer",
  "version": "1.0",
  "description": "Rename your Chrome tab title easily and automatically.",
  "permissions": ["tabs", "scripting", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icons/cat19.png",
      "38": "icons/cat38.png",
      "48": "icons/cat48.png",
      "128": "icons/cat128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
